    "TR": {
      "code": "TR",
      "name": "Turkey",
      "currency": {
        "code": "TRY",
        "symbol": "₺",
        "name": "Turkish Lira"
      },
      "validation": {
        "bankAccount": {
          "accountNumber": {
            "pattern": "^[0-9]+$",
            "minLength": 10,
            "maxLength": 17,
            "required": true,
            "errorMessages": {
              "required": "Account number is required",
              "pattern": "Account number must contain only digits",
              "length": "Account number must be between 10 and 17 digits"
            },
            "hint": "Turkish account: 10-17 digits",
            "placeholder": "e.g., 1234567890123456"
          },
          "iban": {
            "pattern": "^TR[0-9]{24}$",
            "length": 26,
            "prefix": "TR",
            "required": false,
            "errorMessages": {
              "pattern": "Invalid Turkish IBAN format",
              "length": "Turkish IBAN must be 26 characters (TR + 24 digits)"
            },
            "hint": "Format: TR + 24 digits (26 chars total)",
            "placeholder": "e.g., TR330006100519786457841326"
          },
          "swiftCode": {
            "pattern": "^[A-Z]{4}[A-Z]{2}[A-Z0-9]{2}([A-Z0-9]{3})?$",
            "lengths": [8, 11],
            "required": false,
            "errorMessages": {
              "pattern": "Invalid SWIFT code format",
              "length": "SWIFT code must be 8 or 11 characters"
            },
            "hint": "8 or 11 characters",
            "placeholder": "e.g., AKBKTRIS"
          },
          "branchCode": {
            "pattern": "^[0-9]{4,5}$",
            "minLength": 4,
            "maxLength": 5,
            "required": true,
            "errorMessages": {
              "required": "Branch code is required",
              "pattern": "Branch code must be 4-5 digits"
            },
            "hint": "4-5 digit branch code",
            "placeholder": "e.g., 0519"
          }
        },
        "phone": {
          "pattern": "^(\\+90|0)?[0-9]{10}$",
          "errorMessages": {
            "pattern": "Invalid Turkish phone number"
          },
          "hint": "+90 XXX XXX XX XX",
          "placeholder": "+90 5XX XXX XX XX"
        },
        "taxNumber": {
          "pattern": "^[0-9]{10,11}$",
          "errorMessages": {
            "pattern": "Tax number must be 10 or 11 digits"
          },
          "hint": "10-11 digits"
        }
      },
      "formats": {
        "date": "DD.MM.YYYY",
        "dateTime": "DD.MM.YYYY HH:mm",
        "number": {
          "decimalSeparator": ",",
          "thousandSeparator": "."
        }
      }
    },
